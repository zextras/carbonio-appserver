arch=('x86_64')
depends=(
  "carbonio-appserver-conf"
  "carbonio-appserver-service"
  "carbonio-appserver-db"
  "carbonio-appserver-store-libs"
  "carbonio-appserver-war"
  "carbonio-core"
  "carbonio-jetty-distribution"
  "carbonio-mariadb"
  "carbonio-prometheus-mysqld-exporter"
